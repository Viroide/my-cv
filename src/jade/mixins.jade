mixin nodo-historia(fecha, titulo, texto)
    .nodo-historia
        .nodo-circulo
            i.fa.fa-circle-o
        .nodo-titulo
            p 
                span.fecha= fecha
                span= titulo
        .nodo-texto.hide
            p=texto

mixin tabButton(texto, ref, icono)
    li
        a(src=ref, href="#"+ref title=texto)
            i(tab=ref, class="fa "+icono)