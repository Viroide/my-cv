@import colores
@import mixins
@import url("https://fonts.googleapis.com/css?family=Source+Code+Pro")

@media screen
    html, body 
        margin 0 !important
        height 100%
        width 100%
        font-family: 'Source Code Pro' !important
        // font-family: 'Roboto Slab', serif;
        color white
        font-size 14px 

    main 
        background-color carne
        

    //  iconos alineados con sus links
    nav
         i 
            vertical-align middle 
            margin-right 6px


    #content
        padding 22px
        
    #datos-personales
        &>*
            float left
        .img 
            width 160px
            height 160px
            background url("../img/avatar_sprite.png") 0 0 no-repeat
            &:hover
                background-position 0 -160px
        .datos-texto
            float left
            p 
                margin-left 12px
                .label
                    font-weight bold
    #resumen
        ul li 
            list-style none  
            margin-bottom 8px          
            a
                line-height 28px
                display inline-block
            i.fa
                font-size 28px
                vertical-align middle
                margin-right 8px
                color rgb(63,81,181)
    #historial
        .nodo-historia
            position relative
            padding 0 0 0 44px
            cursor pointer
            &:after
                clear:both
                content " "
                display blockppppp
            .nodo-circulo
                position absolute
                left 0 
                top 0 
                color rojizo
                i.fa
                    font-size 40px
                    background-color carne
                    &:after
                        content " "
                        display block
                        width 4px
                        height 350px
                        background-color rojizo
                        position absolute
                        top 36px
                        left 16px
            &:last-child                
                .nodo-circulo i.fa:after
                    background-color carne
                    top 40px
            .nodo-titulo
                color blanco
                margin-left 12px
                .fecha
                    margin-right 6px
                    font-weight bold
                    &:after
                        content ": "
            .nodo-texto
                margin-left 12px
                color gris
                max-height 0
                transition: max-height 1s ease;
                overflow hidden
            &:hover, &.selected
                i.fa
                    color verde
                    &:after
                        background-color verde
            &.selected
                .nodo-texto
                    max-height 250px
    #conocimientos
        #back 
            div
                float right 
                cursor pointer
                color gris
            &:after
                content " "
                clear both 
                display block
        .charts 
            color rojizo
       

    //  stylos generales
    small 
        color gris
        font-size 11px

    a 
        text-decoration none
        
                    
    // helper clases
    .hide
        display none
    .clearfix
        clear both

    // chart CSS 
    .c3-axis-x .tick 
        display none

        
    // media queries
    @media (max-width: 640px)
        #resumen
            ul 
                padding 0  
        
